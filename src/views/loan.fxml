<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="loan.LoanController">
   <children>
      <HBox spacing="10.0">
         <children>
            <Label prefHeight="16.0" prefWidth="268.0" text="Enter annual interest rate eg. 2.75%:" />
            <TextField fx:id="txtAnnualRate" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="10.0">
         <children>
            <Label text="Enter number of years as an integer e.g 3:" />
            <TextField fx:id="txtNoYears" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="110.0">
         <children>
            <Label prefHeight="16.0" prefWidth="279.0" text="Enter loan amount e.g 155,000.85:" />
            <TextField fx:id="txtLoanAmount" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <VBox>
         <children>
            <TextArea fx:id="taMessage" prefHeight="200.0" prefWidth="200.0" />
            <HBox>
               <children>
                  <Region prefWidth="480.0" />
                  <Button fx:id="btnCompute" mnemonicParsing="false" text="Compute">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
